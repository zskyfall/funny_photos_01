<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="@string/comment"
            android:textSize="@dimen/sp_20"
            android:textColor="@android:color/black"
            />

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view_outline_botton_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/color_light_grey"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_35"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:id="@+id/image_avatar_post_detail"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/logo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/image_avatar_post_detail"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_username_post_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/text_time_post_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_option_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_more_vert_black_24dp"
                />

            <TextView
                android:id="@+id/text_content_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_below="@+id/image_avatar_post_detail"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <ImageView
                android:id="@+id/image_post_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/text_content_post"
                android:scaleType="centerCrop"
                android:src="@drawable/java"
                />

            <TextView
                android:id="@+id/text_likes_post_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_post_detail"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_10"
                />

            <ImageView
                android:id="@+id/image_like_post_detail"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_below="@+id/image_post_detail"
                android:layout_toLeftOf="@+id/text_likes_post_detail"
                android:src="@drawable/favorite_border_black"
                />

            <ImageView
                android:id="@+id/image_share_post_detail"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_below="@+id/image_post_detail"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/share"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/image_share_post_detail"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_light_grey"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/image_share_post_detail"
                android:layout_marginTop="@dimen/dp_20"
                />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_light_grey"
            />

        <ImageView
            android:id="@+id/image_my_avatar_comment"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@android:color/transparent"
            android:padding="@dimen/dp_10"
            android:layout_toRightOf="@id/image_my_avatar_comment"
            android:layout_toLeftOf="@+id/button_comment"
            android:textCursorDrawable="@drawable/cursor_editext_color"
            android:textSize="@dimen/dp_15"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/post_comment"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>

</FrameLayout>
